<div class="container">
<br>
<br>
<br>
<h1>Edit <%= @recipe.title %></h1>

<div class="form-group">
<% if flash[:error] %>
<div class="alert alert-danger" role="alert">
    <h4><em><%= flash[:error] %></h4></em>
</div>
<% end %>
<br>

<form action="/recipes/<%= @recipe.id %>" method="POST">
    <input type="hidden" name="_method" value="PATCH">

    <label for="title">Title: </label>
    <input type="text" name="recipe[title]" value="<%= @recipe.title %>">
    <br>

    <label for="instructions">Instructions: </label>
    <textarea name="recipe[instructions]" cols="30" rows="10"><%= @recipe.instructions %></textarea>
    <br>

    <label for="cook_time">Cook Time: </label>
    <input type="text" name="recipe[cook_time]" value="<%= @recipe.cook_time %>">
    <br>
    <br>
    <button type="submit" class="btn btn-primary">Edit Recipe</button>
</form>
</div>
</div>