<h1>Edit <%= @recipe.title %></h1>

<% if flash[:error] %>
    <h4 style="color:red"><em><%= flash[:error] %></h4></em>
<% end %>

<form action="/recipes/<%= @recipe.id %>" method="POST">
    <input type="hidden" name="_method" value="PATCH">

    <label for="title">Title: </label>
    <input type="text" name="recipe[title]" value="<%= @recipe.title %>">
    <br>

    <label for="instructions">Instructions: </label>
    <textarea name="recipe[instructions]" cols="30" rows="10"><%= @recipe.instructions %></textarea>
    <br>

    <label for="cook_time">Cook Time: </label>
    <input type="text" name="recipe[cook_time]" value="<%= @recipe.cook_time %>">
    <br>
    <br>
    <input type="submit" value="Edit Recipe">
</form>